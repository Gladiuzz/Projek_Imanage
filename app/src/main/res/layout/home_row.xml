<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_Barang_home"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:layout_margin="7dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:src="@drawable/am56pz2_460swp"
            android:scaleType="centerCrop"
            android:id="@+id/barang_img_home" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/barang_img_home"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nama_barang_home"
                android:text="Nama Barang"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/txt_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama_barang_home"
                android:text="qty : "
                android:textSize="11dp"/>

            <TextView
                android:id="@+id/jml_qty_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_qty"
                android:layout_below="@id/nama_barang_home"
                android:text="0"
                android:textSize="11dp"/>

            <TextView
                android:id="@+id/pembatas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/jml_qty_home"
                android:layout_below="@id/nama_barang_home"
                android:text="l"
                android:layout_marginLeft="8dp"
                android:textSize="11dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/harga_barang_home"
                android:text="Harga Barang"
                android:textSize="11sp"
                android:textColor="@color/main_color"
                android:textAllCaps="false"
                android:layout_below="@id/nama_barang_home"
                android:layout_toRightOf="@id/pembatas"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:id="@+id/img_date"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_date_range_black_24dp"
                android:layout_below="@id/jml_qty_home"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 month ago"
                android:layout_marginStart="4dp"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:layout_below="@id/jml_qty_home"
                android:layout_toRightOf="@id/img_date"/>

        </RelativeLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>